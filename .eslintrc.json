{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": "off",
        "arrow-parens": "off",
        "react/prop-types": 2,
        "react/wrap-multilines": 0,
        "react/jsx-wrap-multilines": 0,
        "react/require-extension": 0,
        "no-console": 0,
        "no-param-reassign": 0,
        "linebreak-style": [
            "error",
            "windows"
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "all",
                "printWidth": 100,
                "singleQuote": true
            }
        ]
    }
}